<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lcy.dao.BookDao">

    <!-- 查询全部信息 -->
    <select id="queryBookByName" resultType="Book">
        select * from book
        <where>
            <if test="name!=null">
                and name like '%${name}%'
            </if>
        </where>
    </select>

</mapper>
